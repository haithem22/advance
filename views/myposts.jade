extends layout
block content
  br
  br
  br
  br
  link(href='https://img11.warez-bb.org/wbb3_theme/styles/main.css', rel='stylesheet', type='text/css')
  #{title}
  if posts
  .cat-row
    span Topics
   each post, i in posts
    .post
      .list-rows
        .topicrow
          .icon
            span
              a(href='viewtopic.php?t=23178690')
                img.imgfolder(src='http://img11.warez-bb.org/images/folder_new.gif', width='25', height='25', alt='New posts', title='New posts')
          .description
            span
              a(href='viewtopic.php?t=23178690&view=newest')
                img.imgspace(src='http://img11.warez-bb.org/images/icon_newest_reply.gif', width='18', height='9', alt='View newest post', title='View newest post', border='0')
              span.title
                span.genmed
                a.topictitle(href='/forum/'+id+'/myposts/'+post._id) #{post.title}
              span.pagination
          .posts
            span #{post.author}



  style.
    .post{
    padding-top:0px;
    display:inline;
    }
    .cat-row {
        display: block;
    }
    .cat-row, table .cat {
        background-color: #CBD5E4;
        border-top: 1px #FFF solid;
        border-bottom: 1px #A2B2CC solid;
        position: relative;
        font-size: 15px;
        font-weight: bold;
        width: 100%;
    }
    .topictitle{
    font-size: 15px;
    color:black;
    }
    .list-wrap, .cat-row {
        font-family: Verdana, Helvetica, Arial, sans-serif;
    }
    html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, cite, code, del, dfn, em, font, img, ins, kbd, q, s, samp, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li fieldset, form, label, legend, caption {
        list-style-type: none;
        border: 0;
        font-size: 100%;
        vertical-align: baseline;
        background: transparent;
        margin: 0;
        padding: 0;
