
extends layout
block content
 if errors 
  ul.errors 
   each error, i in errors
    li.alert.alert-danger #{error.msg}
 .container 
  form(method='post' , action='/signup', enctype='multipart/form-data' )
    h1 Register
    .form-group
     label NAME
     input.form-control(type='text', name='name',placeholder='enter name')
    .form-group
     label E-mail
     input.form-control(type='text', name='email',placeholder='enter email')
    .form-group
     label Username
     input.form-control(type='text', name='username',placeholder='enter username')
    .form-group
     label Password
     input.form-control(type='password', name='password',placeholder='enter password')
    .form-group
     label Confirm Password
     input.form-control(type='password', name='password2',placeholder='confirm password')
    .form-group
     label Specialty
     select.form-control(name='fieldOfSpecialty')
      each category , i in categories
       option(value= category.title) #{category.title}
    .form-group
     label Avatar
     input.form-control(type='file', name='profileimage',placeholder='upload avatar')
    input.btn.btn-default(name='submit',type='submit',value='Register') 
  