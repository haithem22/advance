extends layout
block content
 if errors 
  ul.errors 
   each error, i in errors
    li.alert.alert-danger #{error.msg}
 .container 
  form(method='post' , action='/mooc/'+id+'/mentoring', enctype='multipart/form-data' )
    h1 Request Mentoring

    if !(yes)
     .form-group
      label choice field
      select.form-control(name='fieldOfSpecialty')
       each category , i in categories
        option(value= category.title) #{category.title}
      input.btn.btn-default(name='submit',type='submit',value='Next') 
    if yes
     .form-group
      label choice mentor
      select.form-control(name="mentor")
       each mentor, i in mentors
        option(value= mentor.username) #{mentor.username}
     input.btn.btn-default(name='submit',type='submit',value='Send') 
  